// Fig. 11.2: fig11_02.c
// Creating a sequential file
#include <stdio.h>
int main( void )
{
FILE *pfile =NULL;
int a=0, b=0, c=0;
printf("\n a=");
scanf("%d",a);
printf("\n b=");
scanf("%d",b);
printf("\n c=");
scanf("%d",c);
pfile = fopen("/home/abubakr/test.txt","w");
fprintf(pfile, "a = %d \n b= %d \n c= %d " , a, b, c);

fclose(pfile);
//remove("/home/abubakr/test.c");

return 0;
} // end main
