#include "lcd.h"
#include "ADC_Driver.h"

uint8 main (void){
	uint16 result=0, temp=0;
	LCD_init();
	ADC_init();
	result = ADC_read(2);
	temp = (150*result*5)/(1.5*1023);
	LCD_displayStringRowColumn(0,3,"Temp=");
	LCD_Display_String_Row_Col (0,8,temp);
	while (1){

	}
	return (0);
}

