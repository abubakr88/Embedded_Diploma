    #include <stdio.h>

    	int main()
    	{
    	   char *str;

    	   /* Initial memory allocation */
    	   str = (char *) malloc(15);
    	   strcpy(str, "tutorialspoint");
    	   printf("String = %s,  Address = %u\n", str, str);
    	   return(0);
    	}

