#include <avr/io.h>
#include <util/delay.h>
#include <avr/interrupt.h>

#define set_bit(reg, bitnumber) (reg |= (1 << bitnumber))
#define clr_bit(reg, bitnumber) (reg &= ~(1 << bitnumber))
#define get_bit(reg, bitnumber) (reg & (1 << bitnumber))

int main ()
{
	set_bit(MCUCR, ISC00);
	set_bit(MCUCR, ISC01);
	set_bit(GICR, INT0);
	sei();

	clr_bit(DDRD, 1);
	clr_bit(DDRD, 2);

	set_bit(DDRD, 6);
	set_bit(DDRD, 7);

	while(1)
	{
		if (get_bit(PIND, 1))
				{
					set_bit(PORTD, 6);
				}
				else
				{
					clr_bit(PORTD, 6);
				}
		if (get_bit(PIND, 2))
				{
				set_bit(PORTD, 7);
			}
		else
			{
				clr_bit(PORTD, 7);
				}
	}
}

ISR(INT0_vect)	{

				set_bit(PORTD, 5);
				set_bit(PORTD, 6);
				set_bit(PORTD, 7);

}
