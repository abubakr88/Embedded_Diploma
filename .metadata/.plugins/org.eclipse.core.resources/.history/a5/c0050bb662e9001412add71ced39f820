// Fig. 11.2: fig11_02.c
// Creating a sequential file
#include <stdio.h>
int main( void )
{
FILE *pfile =NULL;
char *file = "/home/abubakr/test.txt";
int a=0, b=0, c=0, x=0,y=0,z=0;
printf("\n a=");
scanf("%d",&a);
printf("\n b=");
scanf("%d",&b);
printf("\n c=");
scanf("%d",&c);
pfile = fopen(file,"w");
fprintf(pfile, "%d%d%d " , a, b, c);
printf("%d", "*pfile");
fclose(pfile);
pfile = fopen(file,"r");
fscanf(pfile, "%d%d%d",&x ,&y ,&z);
//printf("%d %d %d", x, y, z);
fclose(pfile);
return 0;
} // end main
