#include <avr/io.h>
#include "FreeRTOS.h"
#include "task.h"
void task1 (void* ptr){
	DDRA |= (1<< PA0);
	while(1){
		PORTA ^= (1<<PA0); // XOR to Blink the LED
		vTaskDelay(500);
	}
}

void task2 (void* ptr){
	DDRA |= (1<< PA1);
	while(1){
		PORTA ^= (1<<PA1); // XOR to Blink the LED
		vTaskDelay(1000);
	}
}

void main (void){
	xTaskCreate(task1,"task_one",60,NULL,3,NULL);  //pv pointer to void, 60 word
	xTaskCreate(task2,"task_two",60,NULL,2,NULL);
	vTaskStartScheduler();
}
