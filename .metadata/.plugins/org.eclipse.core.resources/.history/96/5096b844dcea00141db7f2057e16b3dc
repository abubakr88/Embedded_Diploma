#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
int ncycle=0, h=0 ,i=0;
    puts("insert the number of cycles: \n");
    scanf("%d", &ncycle);
    if (ncycle%2==0){

    for (i=0;i>ncycle;i++)
        {
        h = 2*h ;
        h = h +1;
    }
    }
    else{
        for (i=0;i>ncycle-1;i++)
            {
            h = 2*h ;
            h = h +1;
        }
    }
    return 0;
}
